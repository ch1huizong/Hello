<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hello">

    <permission
        android:name="com.example.hello.Permission1"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.hello.Permission2"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.hello.Permission3"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.hello.Permission4"
        android:label="aaa"
        android:protectionLevel="dangerous" />

    <uses-permission android:name="com.example.hello.Permission3" />
    <uses-permission android:name="com.example.hello.Permission4" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hello">

        <receiver
            android:name=".PermReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="com.example.hello.Permission2" />


        <activity android:name=".NoPermActivity" android:exported="true" />
        <activity android:name=".PermActivity" android:exported="true" android:permission="com.example.hello.Permission1" />
        <activity
            android:name=".DangerActivity"
            android:enabled="true"
            android:exported="true"
            android:permission="com.example.hello.Permission4" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>